    <Version>1.1.0.0</Version>
    <AssemblyVersion>1.1.0.0</AssemblyVersion>
    <PackageVersion>1.1.0.0-alpha.2</PackageVersion>
    <PackageId>JsonSrcGen.Runtime</PackageId>
    <Authors>Daniel Hughes</Authors>
    <Description>
        Runtime dependency of JsonSrcGen. Provides fixed functionality and
        helper methods are can't be part of the generated code.
    </Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Copyright>Copyright Â© Daniel Hughes 2020</Copyright>
    <PackageProjectUrl>https://github.com/trampster/JsonSrcGen</PackageProjectUrl>
    <RepositoryUrl>https://github.com/trampster/JsonSrcGen</RepositoryUrl>
    <PackageIcon>icon.png</PackageIcon>
  </PropertyGroup>

  <ItemGroup>
      <None Include="icon.png" Pack="true" PackagePath=""/>
  </ItemGroup>
